{
  "name": "c_blogDetail",
  "layers": [
    {
  		"type": "container",
  		"name": "scrollContainer",
  		"scroll": "vertical",
  		"consumesKeyboard": true,
      "children": [
        {
          "type": "image",
          "name": "image",
          "dataKey": "image",
          "scaleType": "scaleAspectFill",
          "fallbackImage": "https://res.appframework.de/media/fabrik19-blog/Capture.PNG",
          "constraints": [
            {
              "type": "pos",
              "x": "0",
              "y": "0"
            },
            {
              "type": "pos",
              "relativeAnchor": "ne",
              "anchor": "ne",
              "x": "0",
              "y": "0"
            },
            {
              "type": "size",
              "width": "100%",
              "height": "200pt"
            }
          ]
        },
        {
          "type": "text",
          "name": "title",
          "dataKey": "title",
          "classes": [
            "text",
            "h3"
          ],
          "constraints": [
            {
              "type": "pos",
              "relativeTo": "image",
              "relativeAnchor": "sw",
              "x": "20pt",
              "y": "20pt"
            },
            {
              "type": "pos",
              "relativeTo": "image",
              "relativeAnchor": "se",
              "anchor": "ne",
              "x": "-20pt",
              "y": "20pt"
            }
          ]
        },
        {
          "type": "text",
          "name": "author",
          "dataKey": "author",
          "classes": [
            "text",
            "subtitle"
          ],
          "constraints": [
            {
              "type": "pos",
              "relativeTo": "title",
              "relativeAnchor": "sw",
              "x": "0pt",
              "y": "20pt"
            },
            {
              "type": "pos",
              "relativeTo": "title",
              "relativeAnchor": "se",
              "anchor": "ne",
              "x": "0pt",
              "y": "20pt"
            }
          ]
        },
        {
          "type": "text",
          "name": "content",
          "dataKey": "content",
          "classes": [
            "text"
          ],
          "constraints": [
            {
              "type": "pos",
              "relativeTo": "author",
              "relativeAnchor": "sw",
              "x": "0pt",
              "y": "20pt"
            },
            {
              "type": "pos",
              "relativeTo": "author",
              "relativeAnchor": "se",
              "anchor": "ne",
              "x": "0pt",
              "y": "20pt"
            }
          ]
        }
      ],
  		"constraints": [
        {
          "type": "pos",
          "x": "0",
          "y": "0"
        },
        {
          "type": "pos",
          "relativeAnchor": "se",
          "anchor": "se",
          "x": "0",
          "y": "-1"
        }
      ]
  	},
  	{
      "type": "color",
      "name": "bottomBorder",
      "value": "#DDDDDD",
      "constraints": [
        {
          "type": "pos",
          "anchor": "n",
          "relativeTo": "scrollContainer",
          "relativeAnchor": "s",
          "x": "0",
          "y": "0"
        },
        {
          "type": "size",
          "width": "100%",
          "height": "1pt"
        }
      ]
    }
  ]
}
